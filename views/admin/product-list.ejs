<!DOCTYPE html>
<html lang="en">
<head>
 <%- include("../partials/head.ejs")  %> 
    </head>
<body>

    <!-- header section start -->
    <%- include("../partials/header.ejs")  %> 
<!-- header end -->


    <div class="container mt-3">
    <div class="row">
      <div class="col-md-12 mt-3">
        <% if (action != "undefined" && action=="edit") { %>
          <div class="alert alert-success">
           <%= productid %> id N Product guncellendi
          </div>
        <% } %>
        <% if (action != "undefined" && action=="delete") { %>
          <div class="alert alert-danger">
            Product silindi
          </div>
        <% } %>
        <% if (action != "undefined" && action=="create") { %>
          <div class="alert alert-success">
            Product quruldu
          </div>
        <% } %>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th style="width: 50px;">id</th>
              <th style=" width:150px;">sekil</th>
              <th>ad</th>
              <th>kategori</th>
              <th>qiymet</th>
              <th style="width: 50px;"></th>
              <th style="width: 50px;"></th>
            </tr>
            <tbody>
              <tr>
                <% products.forEach(product => { %>
                 <tr>
                    <td><%= product.id %> </td>
                    <td><img src="/static/images/<%= product.sekil %> " class="img-fluid" alt=""></td>
                    <td><%= product.ad %></td>
                    <td>
                      <% product.categories.forEach(category => { %>
                       <p><%= category.ad %></p>
                      <% }) %>
                      </td>    
                    <td><%= product.qiymet %></td>
                    <td>
                        <a class="btn btn-sm btn-danger" href="/admin/product/delete/<%= product.id %>">Delete</a>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/admin/products/<%= product.id %>">Edit</a>
                    </td>
                </tr>
                <% }) %>
              </tr>
            </tbody>
          </thead>
        </table>
      </div>
    </div>
    </div>



        <script>

let searchForm=document.querySelector('.search-form');

document.querySelector('#search-btn').onclick=()=>{
    searchForm.classList.toggle('active');
}
        </script>

</body>

</html>