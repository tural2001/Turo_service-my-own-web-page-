<!DOCTYPE html>
<html lang="en">
<head>
 <%- include("../partials/head.ejs")  %> 
    </head>
<body>

    <!-- header section start -->
    <%- include("../partials/header.ejs")  %> 
<!-- header end -->


    <div class="container mt-3">
      
        <div class="row">
            <div class="col-md-12 mt-3">
                 <form  method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="roleid" value="<%= role.id %>">
                    <div class="row mb-3">
                        <label for="ad" class="col-sm-2 col-form-label">Ad</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control"  id="rolename" name="rolename" value="<%= role.rolename %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                           <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                 </form>
            </div>
            <table class="table table-bordered table-striped mt-3">
                <thead>
                  <tr>
                    <th style="width: 50px;">id</th>
                    <th style=" width:150px;">Username</th>
                    <th>email</th>
                    <th style="width: 160px;"></th>
                    <th style="width: 50px;"></th>
                  </tr>
                  <tbody>
                      <% users.forEach(user => { %>
                       <tr>
                          <td><%= user.id %> </td>
                          <td><%= user.fullname %></td>
                          <td><%= user.email %></td>
                          <td>
                            <form action="/admin/roles/remove" method="post">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input type="hidden" name="roleid" value="<%= role.id %>">
                                <input type="hidden" name="userid" value="<%= user.id %>">
                                <button class="btn btn-sm btn-danger" type="submit">Kategoriden cikart</button>
                            </form>
                          </td>
                          <td>
                              <a class="btn btn-sm btn-primary" href="/admin/users/<%= user.id %>">Edit</a>
                          </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </thead>
              </table>
        </div>
    </div>



        <script>

let searchForm=document.querySelector('.search-form');

document.querySelector('#search-btn').onclick=()=>{
    searchForm.classList.toggle('active');
}
        </script>

</body>

</html>