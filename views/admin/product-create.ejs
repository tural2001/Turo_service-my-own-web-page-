<!DOCTYPE html>
<html lang="en">
<head>
 <%- include("../partials/head.ejs")  %> 
    </head>
<body>

    <!-- header section start -->
    <%- include("../partials/header.ejs")  %> 
<!-- header end -->


    <div class="container mt-3">
      
        <div class="row">
            <div class="col-md-12 mt-3">
                <% if (typeof message != "undefined") { %>
                    <div class="alert alert-<%= message.class %>">
                      <%= message.text %> 
                    </div>
                  <% } %>

                 <form  method="post" enctype="multipart/form-data" action="/admin/product/create?_csrf=<%= csrfToken %>">
                    <div class="row mb-3">
                        <label for="ad" class="col-sm-2 col-form-label">Ad</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control"  id="ad" name="ad" value="">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="haqqinda" class="col-sm-2 col-form-label">Haqqinda</label>
                        <div class="col-sm-8">
                            <textarea  id="editor" name="haqqinda" class="form-control" rows="10"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="sekil" class="col-sm-2 col-form-label">sekil</label>
                        <div class="col-sm-8">
                            <input type="file" class="form-control"  id="sekil" name="sekil">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="qiymet" class="col-sm-2 col-form-label">qiymet</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control"  id="qiymet" name="qiymet">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="anasayfa" name="anasayfa">
                                <label class="form-check-label" for="anasayfa">
                                  Anasayfa
                                </label>
                              </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="onay" name="onay">
                                <label class="form-check-label" for="onay">
                                  Onay
                                </label>
                              </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                           <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                 </form>
            </div>
        </div>
    </div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor5/36.0.0/ckeditor.min.js"></script>
<script>
    ClassicEditor
        .create( document.querySelector( '#editor' ) )
        .catch( error => {
            console.error( error );
        } );
</script>


        <script>

let searchForm=document.querySelector('.search-form');

document.querySelector('#search-btn').onclick=()=>{
    searchForm.classList.toggle('active');
}
        </script>

</body>

</html>